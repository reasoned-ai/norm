"""
Transformer
"""

transformer:: (s: [english_word]) -> [english_word]
:10=
for i2, w2 in enumerate(s):
  (for i1, w1 in enumerate(s):
     (w1 => w2) as a and a ~ gaussian(abs(i2 - i1))
   and return w2)

bert:: (s: [english_word], n: integer) -> [english_word]
:= generate(english_word, all(transformer(s)), n)


